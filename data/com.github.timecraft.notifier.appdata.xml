<component type="desktop">
  <id>com.github.timecraft.notifier.desktop</id>

  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <name>Notifier</name>
  <summary>Never forget to do something.</summary>

  <developer_name>Timecraft</developer_name>
  <provides>com.github.timecraft.notifier</provides>
  <provides>com.github.timecraft.notifier-daemon</provides>

  <description>
    <p>Get notified of what to do and when to do it.</p>
    <p>Set the time of the reminder.</p>
    <p>Set the priority of the notification.</p>
    <p>Automatically saves your reminders.</p>
    <p>Supports closing with Ctrl + Q</p>
  </description>

  <url type="bugtracker">https://github.com/Timecraft/notifier/issues</url>
  <url type="help">https://github.com/Timecraft/notifier/issues</url>
  <url type="homepage">https://github.com/Timecraft/notifier</url>
  <url type="translate">https://github.com/Timecraft/notifier/tree/master/po</url>

  <update_contact>timemaster23x@gmail.com</update_contact>

  <custom>
    <value key="x-appcenter-color-primary">#ffe16b</value>
    <value key="x-appcenter-color-primary-text">#000000</value>
  </custom>

  <screenshots>
    <screenshot type="default">
      <caption>The main UI of Notifier</caption>
      <image>https://raw.githubusercontent.com/Timecraft/notifier/master/data/images/MainUI.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/Timecraft/notifier/master/data/images/NewReminder.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.1.2" date="2018-04-21">
      <description>
        <p>Minor UI improvements</p>
        <p>Changed App icon</p>
        <p>Added support for reminder frequencies. Please note that this will require a restart to initiate if you are updating.</p>

        <p>Up to date with the github release</p>
      </description>
    </release>

    <release version="0.1.0" date="2018-04-15">
      <description>
        <p>Initial Release to AppCenter</p>
      </description>
    </release>
  </releases>

</component>
